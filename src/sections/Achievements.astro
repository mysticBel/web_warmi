---
import CardLogros from "../components/CardLogros.astro";
---

<section class="our-achievements">
  <h2>Nuestros <span class="logros-text">logros</span></h2>
  <p class="description">
    Nuestras cifras convertidas en impacto social con un mismo propósito
  </p>
  <ul class="cards-logros">
    <CardLogros number="+150" text="Proyectos" />
    <CardLogros number="+45" text="mentores" />
    <CardLogros number="+6" text="países de habla hispana" />
    <CardLogros number="+4000" text="impactados" />
    <CardLogros number="+700" text="miembros de la comunidad" />
  </ul>
</section>
<style>
  .our-achievements {
    background: rgb(208, 75, 196);
    background: linear-gradient(
      90deg,
      rgba(208, 75, 196, 1) 0%,
      rgba(74, 50, 136, 1) 100%
    );
    padding: 50px 100px;
    margin: 0;
  }
  .cards-logros {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: 30px;
  }
  .our-achievements h2 {
    color: #fff;
  }
  .logros-text {
    color: #01fabe;
  }
  .our-achievements p {
    color: #fff;
    font-size: 1.2rem;
    text-align: center;
    padding-bottom: 10px;
  }
  /*responsive*/

  @media (max-width: 640px) {
    .our-achievements {
      padding: 3rem 4rem;
      text-align: left;
      border: none;
    }
    .cards-logros {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }
  }
</style>
