    text-align: center;
    gap: 25px;
    align-items: center;
  }

  .logo-footer {
    width: 150px; 
  }

  .titles-footer,
  .sm-title {
    font-size: 18px; 
  }

  .contact-tel,
  .contact-correo {
    flex-direction: row;
    justify-content: center;
    gap: 15px;
  }

  .social-media {
    flex-direction: row;
    justify-content: center;
    gap: 20px;
  }

  .container-icon-sm {
