  .container-social-newsletter {
    flex-direction: column;
    text-align: center;
    gap: 20px;
    align-items: center;
  }

  .logo-footer {
    width: 120px; 
  }

  .titles-footer,
  .sm-title {
    font-size: 16px; 
  }

  .contact-tel,
  .contact-correo {
    flex-direction: column;
    gap: 10px;
  }

  .social-media {
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .container-icon-sm {
    width: 35px; 
  }

  .input-newsletter {
    width: 100%;
    padding: 8px;
  }

  .btn-newsletter {
    width: 80px;
    padding: 6px;
  }
}
