.item-sm {
  display: flex;
  gap: 15px;
}

.contact-tel,
.contact-correo {
  display: flex;
  gap: 20px;
  color: #fff;
  padding: 10px;
  align-items: center;
}

.social-media {
  display: flex;
  gap: 20px;
}

.icon-social-media {
  width: 100%;
}

.title-main-sm {
  display: none;
}

.sm-title {
  color: white;
  display: none;
}

.container-icon-sm {
  width: 45px;
}

.newsletter {
  color: #fff;
}

.input-newsletter {
  border-radius: 5px;
  padding: 5px;
  width: 250px;
  outline: none;
  color: rgb(44, 43, 43);
}

.input-newsletter::placeholder {
  font-style: italic;
  color: rgb(169, 164, 164);
}

.btn-newsletter {
  background-color: #01fabe;
  color: #232039;
  width: 80px;
  padding: 6px;
  border-radius: 10px;
  margin-left: 10px;
  border: 1px solid #232039;
  box-shadow: 10px 10px 0px #232039;
  transition: all 0.3s ease;
  cursor: pointer;
}

.btn-newsletter:hover {
  border: 2px solid #232039;
  box-shadow: 5px 5px 0px #232039;
}

.btn-newsletter:active {
  box-shadow: none;
  transform: translateY(4px);
}
