---
const logoWarmi = "/assets/warmi-logo.png";
const telIcon = "/assets/tel.png";
const correoIcon = "/assets/gmail.png";
const linkedinIcon = "/assets/linkedin.png";
const intgIcon = "/assets/ig.png";
const fbIcon = "/assets/facebook.png";
---

<section class="footer" id="footer">
  <div class="container-footer">
    <div class="container-logo-contact">
      <div class="logo-footer">
        <img
          loading="lazy"
          src={logoWarmi}
          alt="logo-warmi"
          class="size-img"
        />
      </div>
      <div class="contact-footer">
        <h3 class="titles-footer">Contáctanos</h3>
        <div class="contact-tel">
          <div class="container-img-contact-tel">
            <img
              loading="lazy"
              src={telIcon}
              alt="tel"
              class="size-img"
            />
          </div>
          <p><a href="https://wa.link/b35suv" target="_blank">916278153</a></p>
        </div>
        <div class="contact-correo">
          <div class="container-img-contact">
            <img
              loading="lazy"
              src={correoIcon}
              alt="correo"
              class="size-img"
            />
          </div>
          <p>
            <a href="mailto:warmi.ventures@gmail.com"
              >warmi.ventures@gmail.com</a
            >
          </p>
        </div>
      </div>
    </div>
    <div class="container-social-newsletter">
      <div class="social-media">
        <h3 class="titles-footer title-main-sm">Síguenos</h3>
        <div class="container-icon-sm">
          <a
            href="https://www.linkedin.com/company/warmi-ventures/about/"
            class="item-sm"
            ><img
              loading="lazy"
              src={linkedinIcon}
              alt="Linkedin"
              class="icon-social-media"
            />
            <p class="sm-title">Linkedin</p></a
          >
        </div>
        <div class="container-icon-sm">
          <a href="https://www.instagram.com/warmiventures/" class="item-sm"
            ><img
              loading="lazy"
              src={intgIcon}
              alt="Instagram"
              class="icon-social-media"
            /><p class="sm-title">Instagram</p></a
          >
        </div>
        <div class="container-icon-sm">
          <a href="https://www.facebook.com/warmiventures/" class="item-sm"
            ><img
              loading="lazy"
              src={fbIcon}
              alt="Facebook"
              class="icon-social-media"
            /><p class="sm-title">Facebook</p></a
          >
        </div>
      </div>
      <!-- Bloque de espacio vacío para mantener la estructura si el newsletter está comentado -->
      <div style="height: 0;"></div>
    </div>
  </div>
</section>

<style>
  .footer {
    background: linear-gradient(
      90deg,
      rgba(208, 75, 196, 1) 0%,
      rgba(74, 50, 136, 1) 100%
    );
    display: flex;
    justify-content: flex-start; /* Cambiado para alinear al inicio */
    padding: 40px;
    width: 100%;
  }

  .container-footer {
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Cambiado para alinear al inicio */
    align-items: flex-start;     /* Cambiado para alinear al inicio */
    max-width: 1200px;
    margin: 0 auto;
    align-self: flex-start;
    gap: 30px;
  }

  .container-logo-contact,
  .container-social-newsletter {
    display: flex;
    flex-direction: column;
    gap: 33px;
    align-items: flex-start; /* Cambiado para alinear al inicio */
    justify-content: flex-start; /* Cambiado para alinear al inicio */
    text-align: left; /* Cambiado para alinear al inicio */
    margin-top: 30px;
  }

  .logo-footer {
    width: 200px;
  }

  .contact-footer {
    color: #fff;
    text-align: left; /* Cambiado para alinear al inicio */
  }

  .titles-footer {
    font-weight: bold;
    color: #fff;
    font-size: 20px;
    padding-bottom: 15px;
  }

  .item-sm {
    display: flex;
    gap: 15px;
  }

  .contact-tel,
  .contact-correo {
    display: flex;
    gap: 20px;
    color: #fff;
    padding: 10px;
    align-items: center;
  }

  .social-media {
    display: flex;
    gap: 20px;
  }

  .icon-social-media {
    width: 100%;
  }

  .title-main-sm {
    display: none;
  }

  .sm-title {
    color: white;
    display: none;
  }

  .container-icon-sm {
    width: 45px;
  }

  .newsletter {
    color: #fff;
  }

  .input-newsletter {
    border-radius: 5px;
    padding: 5px;
    width: 250px;
    outline: none;
    color: rgb(44, 43, 43);
  }

  .input-newsletter::placeholder {
    font-style: italic;
    color: rgb(169, 164, 164);
  }

  .btn-newsletter {
    background-color: #01fabe;
    color: #232039;
    width: 80px;
    padding: 6px;
    border-radius: 10px;
    margin-left: 10px;
    border: 1px solid #232039;
    box-shadow: 10px 10px 0px #232039;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-newsletter:hover {
    border: 2px solid #232039;
    box-shadow: 5px 5px 0px #232039;
  }

  .btn-newsletter:active {
    box-shadow: none;
    transform: translateY(4px);
  }

  @media (max-width: 768px) {
    .container-footer {
      flex-direction: column;
      padding: 20px;
      gap: 20px;
    }

    .container-logo-contact,
    .container-social-newsletter {
      flex-direction: column;
      text-align: left;
      gap: 25px;
      align-items: flex-start;
    }

    .logo-footer {
      width: 150px;
    }

    .titles-footer,
    .sm-title {
      font-size: 18px;
    }

    .contact-tel,
    .contact-correo {
      flex-direction: row;
      justify-content: flex-start;
      gap: 15px;
    }

    .social-media {
      flex-direction: row;
      justify-content: flex-start;
      gap: 20px;
    }

    .container-icon-sm {
      width: 40px;
    }

    .input-newsletter {
      width: 250px;
      padding: 10px;
    }

    .btn-newsletter {
      width: 90px;
      padding: 8px;
    }
  }

  @media (min-width: 1240px) {
    .container-logo-contact,
    .container-social-newsletter {
      flex-direction: row;
      justify-content: flex-start; /* Cambiado para alinear al inicio */
      align-items: flex-start; /* Cambiado para alinear al inicio */
    }

    .container-footer {
      flex-direction: row;
      justify-content: flex-start; /* Cambiado para alinear al inicio */
    }

    .logo-footer {
      width: 200px;
    }

    .title-main-sm {
      display: block;
    }

    .sm-title {
      display: block;
    }

    .social-media {
      display: block;
      width: 100%;
      padding: 0;
    }

    .container-icon-sm {
      margin-bottom: 15px;
      width: 50px;
    }

    .input-newsletter {
      width: 300px;
      padding: 10px;
    }

    .btn-newsletter {
      width: 100px;
      padding: 9px;
    }
  }
</style>
