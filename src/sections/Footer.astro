  align-self: flex-start;
  gap: 30px;
}

.container-logo-contact,
.container-social-newsletter {
  display: flex;
  flex-direction: column-reverse;
  gap: 33px;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 30px;
}

.logo-footer {
  width: 200px;
}

.contact-footer {
